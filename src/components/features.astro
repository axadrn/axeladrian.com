---
import { Icon } from "astro-icon/components";
import ContentSection from "~/components/content-section.astro";
import type { FeatureItem } from "~/types";

const features: Array<FeatureItem> = [
  {
    title: "Konzeption",
    description:
      "Ich erarbeite maßgeschneiderte Lösungsansätze. Von der ersten Idee bis zum detaillierten Projektplan.",
    icon: "mdi:handshake",
  },
  {
    title: "Implementierung",
    description:
      "Ich setze Konzepte in effizienten Code um. Dabei nutze ich diverse Sprachen und Frameworks für Front- und Backend..",
    icon: "mdi:feather",
  },
  {
    title: "Qualitätssicherung",
    description:
      "Ich gewährleiste Qualität durch gründliches Testen und löse komplexe Bugs effizient und nachhaltig..",
    icon: "mdi:directions-fork",
  },
  {
    title: "Deployment",
    description:
      "Ich bringe Projekte sicher und reibungslos live und integriere sie nahtlos in bestehende Systeme.",
    icon: "mdi:graph",
  },
  {
    title: "Optimierung",
    description:
      "Ich halte Systeme aktuell und leistungsfähig, optimiere kontinuierlich für beste Performance.",
    icon: "mdi:search-web",
  },
  {
    title: "Dokumentation",
    description:
      "Ich erstelle verständliche Dokumentationen und sorge für reibungslosen Wissensaustausch im Team.",
    icon: "mdi:account-group",
  },
];
---

<ContentSection title="Mein Handwerk" id="features">
  <Fragment slot="lead">
    Mit <span class="text-primary">Kreativität</span>
    und <span class="text-primary">Code</span>
    bringe ich deine Vision zum Leben .
    <ul class="grid max-w-6xl grid-cols-1 md:grid-cols-2 lg:grid-cols-3">
      {
        features.map(({ title, description, icon }) => (
          <li class="flex flex-col items-center gap-4 border border-default bg-offset p-6">
            <div class="size-16 rounded-full border-2 border-current p-3">
              <Icon name={icon} class="size-full" />
            </div>
            <p class="text-center font-extrabold text-xl">{title}</p>
            <p class="text-center text-offset text-sm">{description}</p>
          </li>
        ))
      }
    </ul>
  </Fragment>
</ContentSection>
