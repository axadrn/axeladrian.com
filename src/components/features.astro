---
import { Icon } from "astro-icon/components";
import ContentSection from "~/components/content-section.astro";
import type { WebsiteContent } from "~/types";

const { translations } = Astro.props as { translations: WebsiteContent };
---

<ContentSection title={translations.features.title} id="features">
  <Fragment slot="lead">
    {translations.features.text}
  </Fragment>
  <ul class="grid max-w-4xl grid-cols-1 md:grid-cols-2">
    <li
      class="flex flex-col items-center gap-4 border border-default bg-offset p-6"
    >
      <div class="size-16 rounded-full border-2 border-current p-3">
        <Icon name="mdi:handshake" class="size-full" />
      </div>
      <p class="text-center font-extrabold text-xl">
        {translations.features.one.title}
        <p class="text-center text-offset text-sm">
          {translations.features.one.text}
        </p>
      </p>
    </li>

    <li
      class="flex flex-col items-center gap-4 border border-default bg-offset p-6"
    >
      <div class="size-16 rounded-full border-2 border-current p-3">
        <Icon name="mdi:feather" class="size-full" />
      </div>
      <p class="text-center font-extrabold text-xl">
        {translations.features.two.title}
        <p class="text-center text-offset text-sm">
          {translations.features.two.text}
        </p>
      </p>
    </li>
  </ul>
</ContentSection>
