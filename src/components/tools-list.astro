---
import { Icon } from "astro-icon/components";
import type { ToolsItem } from "~/types";

export interface Props {
  items: Array<ToolsItem>;
}

const { items } = Astro.props;
---

<div class="w-full max-w-4xl space-y-2">
  <div class="relative border border-default bg-offset px-6 pb-4 pt-8">
    <ul class="grid grid-cols-2 gap-8 sm:grid-cols-3 md:grid-cols-4">
      {
        items.map((item) => (
          <li class="flex flex-col items-center gap-2 hover:text-primary">
            <Icon class="size-12" name={item.icon} />
            <span>{item.title}</span>
          </li>
        ))
      }
    </ul>
  </div>
</div>
