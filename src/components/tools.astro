---
import ToolsList from "~/components/tools-list.astro";
import ContentSection from "~/components/content-section.astro";
import type { ToolsItem, WebsiteContent } from "~/types";

const tools: Array<ToolsItem> = [
  {
    title: "Go",
    icon: "tools/go",
  },
  {
    title: "JavaScript",
    icon: "tools/javascript",
  },
  {
    title: "Typescript",
    icon: "tools/typescript",
  },
  {
    title: "Flutter",
    icon: "tools/flutter",
  },
  {
    title: "React",
    icon: "tools/react",
  },
  {
    title: "Next.js",
    icon: "tools/nextjs",
  },
  {
    title: "Electron",
    icon: "tools/electron",
  },
  {
    title: "PostgreSQL",
    icon: "tools/postgresql",
  },
  {
    title: "SQLite",
    icon: "tools/sqlite",
  },
  {
    title: "MongoDB",
    icon: "tools/mongodb",
  },
  {
    title: "Astro",
    icon: "tools/astro",
  },
  {
    title: "Svelte",
    icon: "tools/svelte",
  },
  {
    title: "Vue",
    icon: "tools/vue",
  },
  {
    title: "Node.js",
    icon: "tools/nodejs",
  },
  {
    title: "Docker",
    icon: "tools/docker",
  },
];

const { translations } = Astro.props as { translations: WebsiteContent };
---

<ContentSection title={translations.tools.title} id="tools">
  <Fragment slot="lead">
    {translations.tools.text}
    <ToolsList items={tools} />
  </Fragment>
</ContentSection>
