package pages

import (
	"github.com/axzilla/axeladrian/ui/layouts"
	"github.com/axzilla/goilerplate/pkg/components"
	"github.com/axzilla/goilerplate/pkg/icons"
)

templ Landing() {
	@layouts.BaseLayout() {
		@HeroSection()
		@AboutSection()
		@ProjectsSection()
		@WorkWithMeSection()
		@ContactSection()
	}
}

templ HeroSection() {
	<script src="/assets/js/starfield.js" defer></script>
	<section class="h-screen flex items-center justify-center py-20 px-4 relative bg-black">
		<div id="starfield" class="absolute inset-0">
			<canvas id="starfield-canvas"></canvas>
		</div>
		<div class="text-center relative z-10">
			<h1 class="text-5xl md:text-7xl font-bold mb-2 text-white">
				Axel Adrian
			</h1>
			<p class="text-xl md:text-2xl text-muted-foreground mb-2">
				Developer & Problem Solver
			</p>
			<div class="animate-float">
				<img class="animate-float h-36 m-auto" src="assets/img/me.png"/>
			</div>
		</div>
	</section>
}

templ AboutSection() {
	<section id="about" class="py-20 px-4 bg-muted/50">
		<div class="max-w-3xl mx-auto">
			<h2 class="text-3xl font-bold mb-8">About Me</h2>
			<div class="prose">
				<p class="text-lg mb-6">
					After 6+ years as a Developer, I'm focusing my expertise on Go development. 
					Currently building open-source tools while working remotely from Bangkok, I combine 
					technical depth with a broad understanding of the complete developer lifecycle.
				</p>
				<p class="text-lg mb-6">
					My journey through modern web development (TypeScript, React, Next.js, Svelte, Node.js),
					mobile apps (Flutter/Dart), and DevOps has given me a holistic perspective. I work with both SQL 
					and NoSQL databases, and I'm now bringing this experience to Go-focused projects, including 
					a UI library and a CLI/Web application.
				</p>
				<p class="text-lg">
					Follow my journey and development insights on 
					<a
						href="https://twitter.com/_axzilla"
						target="_blank"
						class="font-medium underline underline-offset-4 hover:text-primary/90"
					>Twitter/X</a>.
				</p>
			</div>
		</div>
	</section>
}

templ ProjectsSection() {
	<section id="projects" class="py-20 px-4">
		<div class="max-w-3xl mx-auto">
			<h2 class="text-3xl font-bold mb-12 text-center">Projects</h2>
			<div class="grid md:grid-cols-2 gap-8">
				@ProjectCard(
					"Goilerplate",
					"Modern UI Components for Go & Templ.",
					"https://github.com/axzilla/goilerplate",
					[]string{"Go", "HTMX", "TailwindCSS"},
				)
				@ProjectCard(
					"BoilerBrew",
					"Open-source SaaS starter kit featuring a Law of 100 challenge app, built with SvelteKit + PocketBase.",
					"https://github.com/axzilla/boilerbrew",
					[]string{"SvelteKit", "PocketBase", "Shadcn"},
				)
				@ProjectCard(
					"Stackpack",
					"Transform your GitHub repositories into AI-friendly formats, perfect for LLMs like Claude, ChatGPT, and Gemini.",
					"https://github.com/axzilla/stackpack",
					[]string{"Go", "CLI", "Web"},
				)
				@ProjectCard(
					"Dotfiles",
					"My development setup featuring Neovim, tmux, wezterm, and custom configurations for maximum productivity.",
					"https://github.com/axzilla/dotfiles",
					[]string{"Neovim", "tmux", "wezterm"},
				)
			</div>
		</div>
	</section>
}

templ ProjectCard(title, description, link string, tags []string) {
	@components.Card(components.CardProps{Class: "hover:bg-muted/30 transition ease-in-out"}) {
		@components.CardHeader() {
			@components.CardTitle() {
				{ title }
			}
			@components.CardDescription() {
				{ description }
			}
		}
		@components.CardContent() {
			<div class="flex flex-wrap gap-2">
				for _, tag := range tags {
					<span class="px-3 py-1 bg-muted text-muted-foreground rounded-full text-sm">
						{ tag }
					</span>
				}
			</div>
		}
		@components.CardFooter() {
			<a
				href={ templ.SafeURL(link) }
				class="hover:opacity-70 transition-colors"
				target="_blank"
				rel="noopener"
			>
				View Project â†’
			</a>
		}
	}
}

templ WorkWithMeSection() {
	<section id="work" class="py-20 px-4 bg-muted/50">
		<div class="max-w-3xl mx-auto">
			<h2 class="text-3xl font-bold mb-8">Work With Me</h2>
			<div class="prose">
				<p class="text-lg mb-6">
					Looking for a developer who understands both technology and business? 
					I specialize in building scalable applications with Go while bringing 
					full-stack expertise to the table.
				</p>
				<p class="text-lg mb-6">
					Working remotely worldwide with a proven track record of successful 
					remote collaboration and clear communication. Professional invoicing 
					through my US LLC ensures a smooth business relationship.
				</p>
				<div class="mt-8">
					@components.Button(components.ButtonProps{Text: "Let's Talk About Your Project", Href: "mailto:hello@axeladrian.com"})
				</div>
			</div>
		</div>
	</section>
}

templ ContactSection() {
